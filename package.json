{
  "name": "noroff-game",
  "version": "0.0.1",
  "description": "Front-end board game",
  "repository": "git@github.com/NancyBolstad/game.git",
  "author": "Nancy Bolstad <litchacha@gmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "npm",
    "sass",
    "parcel",
    "devops"
  ],
  "scripts": {
    "start": "parcel serve src/index.html --open",
    "dev": "parcel watch src/index.html src/game.html src/winner.html",
    "build": "parcel build src/*.html --public-url ./ --out-dir docs/",
    "type-check": "tsc --noEmit",
    "production-clean": "rm -rf docs",
    "yml": "circleci config validate"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.1",
    "sass": "^1.26.1",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {},
  "dependencies": {},
  "resolutions": {},
  "browserslist": [
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "tsc --noEmit"
    }
  },
  "bugs": {
    "url": "https://github.com/NancyBolstad/game/issues"
  },
  "homepage": "https://github.com/NancyBolstad/game#readme"
}
